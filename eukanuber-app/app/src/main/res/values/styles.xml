<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">#233322</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="AppTheme.Button.Primary" parent="AppTheme.Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="AppTheme.Button.Secondary" parent="AppTheme.Button">
        <item name="android:background">@color/colorSecondary</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="AppTheme.Button.Success" parent="AppTheme.Button">
        <item name="android:background">@color/colorSuccess</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="AppTheme.LoginHeaderText">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">45dp</item>
    </style>


    <style name="AppTheme.FloatingButtonLabels">
        <item name="android:background">@drawable/background_label_floating_button</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="popup_window_animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
    </style>

    <style name="NewTripDriver"></style>

    <style name="NewTripDriver.Label">
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="NewTripDriver.Value">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="NewTripDriver.Value.Price">
        <item name="android:textSize">24dp</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:textSize">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

</resources>
