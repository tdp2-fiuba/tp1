<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="70dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Origen" />

        <RelativeLayout
            android:id="@+id/layout_input_search_from"
            android:layout_width="fill_parent"
            android:layout_height="50dp">

            <EditText
                android:id="@+id/input_search_from"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="Ingrese un origen"
                android:imeOptions="actionSearch"
                android:singleLine="true" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_search_from"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layout_input_search_from"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Destino" />

        <RelativeLayout
            android:id="@+id/layout_input_search_to"
            android:layout_width="fill_parent"
            android:layout_height="50dp">

            <EditText
                android:id="@+id/input_search_to"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="Ingrese un destino"
                android:imeOptions="actionSearch"
                android:singleLine="true" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_search_to"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layout_input_search_to"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Animales" />
    </LinearLayout>


</LinearLayout>